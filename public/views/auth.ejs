<div class="auth container clearfix">
  <% if(id) { %>
    <h5 class="sign-up auth-active">welcome back</h5>
    <form action="/" method="post" class="sign-in auth-active">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="signout"> 
    </form>
  <% }else{ %>
    <h5 class="sigin-in auth-active">sign in</h5>
    <form action="/" method="post">
      <input required type="email" name="email" class="sign-up auth-active" placeholder="email">
      <input required type="password" name="password" class="sign-up auth-active" placeholder="password">
      <input type="submit" value="sign in">
    </form>
    <h5 class="sign-up auth-active"><a href="/signup">sign up</a></h5>
  <% } %>
</div>